#############
# Build layer
FROM mcr.microsoft.com/openjdk/jdk:21-ubuntu AS mavenBuild

    COPY pom.xml /tmp/
    COPY src /tmp/src/
    COPY mvnw /tmp/mvnw
    COPY .mvn /tmp/.mvn

    WORKDIR /tmp/

    RUN ./mvnw package && \
        mkdir /staging

# Runtime image
FROM mcr.microsoft.com/openjdk/jdk:21-ubuntu

    COPY --from=mavenBuild /tmp/target/*.jar /example.jar

    CMD ["java", "-jar", "/example.jar"]
